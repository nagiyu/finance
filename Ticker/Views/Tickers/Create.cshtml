@model Ticker

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="TickerName" class="control-label"></label>
                <input asp-for="TickerName" class="form-control" />
                <span asp-validation-for="TickerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TickerCode" class="control-label"></label>
                <input asp-for="TickerCode" class="form-control" />
                <span asp-validation-for="TickerCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeId" class="control-label"></label>
                <select asp-for="ExchangeId" class="form-control" asp-items="ViewBag.ExchangeList"></select>
                <span asp-validation-for="ExchangeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

